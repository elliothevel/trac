<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trac.tracdroid"
    android:versionCode="5"
    android:versionName="1.04" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="20" />
	<uses-permission android:name="android.permission.INTERNET"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/trac_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.trac.tracdroid.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
                       
        </activity>
        <activity
            android:name="com.trac.tracdroid.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait" 
            >
            
        </activity>
        
        <activity
            android:name="com.trac.tracdroid.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait" 
            >
        </activity>
        <activity
            android:name="com.trac.tracdroid.SplashScreen"
            android:label="@string/title_splash_screen"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trac.tracdroid.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
            
        </activity>
        <activity
            android:name="com.trac.tracdroid.GroupFragment"
            android:label="@string/title_activity_group_view" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>
        <activity
            android:name="com.trac.tracdroid.WorkoutFragment"
            android:label="@string/title_activity_workout_view" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.trac.tracdroid.SettingsFragment"
            android:label="@string/title_fragment_settings" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.trac.tracdroid.RosterActivity"
            android:label="@string/title_rosterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
            
        </activity>
    </application>

</manifest>
